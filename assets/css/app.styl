@keyframes rotate {
    100% {
        transform(rotate(360deg))
    }
}

@keyframes dash {
    0% {
        stroke-dasharray: 1, 200;
        stroke-dashoffset: 0
    }
    30% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -35px
    }
    100% {
        stroke-dasharray: 89, 200;
        stroke-dashoffset: -124px
    }
}

#loader
	overflow hidden
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	background $primary
	z-index 1000
	.spinner
		width 50px
		height 50px
		align()
		.circular
			animation rotate 2s linear infinite
			height 100%
			transform-origin center center
			width 100%
			position absolute
			top 0
			bottom 0
			left 0
			right 0
			margin auto
			.path
				stroke $secondary
				stroke-dasharray 1, 200
				stroke-dashoffset 0
				animation dash 1.5s ease-in-out infinite, color 6s ease-in-out infinite

#intro
	position fixed
	transition(height 1600ms cubic-bezier(.72,0,.01,1))
	transition-delay(300ms)
	overflow hidden
	width 100%
	height 100vh
	bottom 0
	left 0
	background $primary
	flexbox()
	justify-content center
	align-items center
	cursor pointer
	z-index 800
	backface()
	span
		transition(opacity 300ms ease)
		opacity 1
		width 15%
		+below($md)
			width 40%

header
	position fixed
	top 0
	left 0
	width 100%
	padding $padding
	z-index 100
	#site-title
		width 70px
		align(horizontal)
		top $padding

nav
	position fixed
	top 0
	left 0
	width 100%
	padding $padding
	z-index 100
	flexbox()
	justify-content space-between
	align-items top
	mix-blend-mode difference
	color $primary
.menu-item
	transition all 400ms ease
	height 0
	overflow hidden
	//visibility hidden
	//opacity 0
	span
		display block
		transition transform 400ms ease
		transform(translate3d(0,-50%,0))
			
body:not(.page)
	nav:hover
		.menu-item
			height 1.1em
			transition all 400ms ease
			visibility visible
			opacity 1
			span
				transform(translate3d(0,0%,0))

#wrapper
	span(1)

#close
	width 2.5rem
	height 2.5rem
	position absolute
	top $padding
	display none
	z-index 100
	a
		display block
		cursor pointer
		width 100%
		height 100%
	span	
		display block
		position absolute
		height 2px
		width 100%
		background $secondary
		left 0
		top 50%
	span:nth-child(1)
		transform(rotate(45deg))
	span:nth-child(2)
		transform(rotate(-45deg))

#container-left
	transform(translate3d(-100%,0,0))
	//overflow-y scroll
	//-webkit-overflow-scrolling touch

#container-right
	transform(translate3d(100%,0,0))
	//overflow-y scroll
	//-webkit-overflow-scrolling touch

.container
	transition(transform 1000ms ease)
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	+below($md)
		transition(transform 500ms ease)
	.inner
		span(1)
	.inner.page
		padding $padding
		font-size 2.1rem
		+below($md)
			font-size 1.5rem
		.section-content
			margin-bottom 1em
		.section-content:last-child
			margin-bottom 0
		.scroller
			height 'calc(100vh - %s)' % ($padding*2+10)
	.column
		span(1/2)
		margin-top 10rem
		+below($md)
			stack()
	.column.fixed
		width 'calc(50% - %s)' % $padding
		height 'calc(100vh - %s)' % ($padding*2+10)
		position fixed
		top $padding
		right $padding
		+below($md)
			display none
		#contact
			position absolute
			bottom 0
			left 0
	.text-content
		text-align justify
		span(8.5/10)
		margin-bottom 1em
		p
			line-height 110%
		img
			margin-bottom 1em
	.text-content:last-child
		margin-bottom 0
	.news
		margin-bottom 1em
	.drawer
		display none
		margin-top 2em
	#contact
		h2.section-title
			cursor pointer
			margin-bottom 0
	#projects-menu
		position fixed
		left 0
		bottom 0
		width 100%
		padding $padding
		mix-blend-mode difference
		color $primary
		flexbox()
		justify-content space-between
		align-items center
		z-index 100
		.menu-item
			transition(width 700ms ease)
			text-align center
			width 1.5em
			margin 0 0.1em
		.menu-item:first-child
			text-align left
		.menu-item:last-child
			text-align right
		.menu-item.active
			width 100%

#imagefeed
	span(1)
	margin-top 'calc(12.5vh + %s)' % $padding
	.content
		span(1)
		height 50vh
		min-height 200px
		max-height 400px
		margin-bottom 120px
		text-align center
		+below($md)
			width 100%
			height auto
			max-height initial
			min-height initial
		img
			display inline-block

#slider
	width 100%
	.project
		background $primary
		.content
			span(1)
			img
				display block
				float left
		.content.half
			img
				width 50%
		.content.fitheight
			height 100vh
			img
				width auto
				height 100%
		.content.right
			img
				float right
	.project-infos
		span(1)
		height 50vh
		padding $padding
		.project-description
			margin-top 1em
			margin-left .3em
			+below($md)
				margin-left 0

body.intro-hidden
	#intro
		height 0
		span
			opacity 0

body.loading
	#container
		.inner.page
			opacity 0


body.page-left
	#close
		display block
		left $padding
	#container-left
		transform(translate3d(0%,0,0) !important)
	#container
		transform(translate3d(100%,0,0) !important)

body.page-right
	#close
		display block
		right $padding
	#container-right
		transform(translate3d(0%,0,0) !important)
	#container
		transform(translate3d(-100%,0,0) !important)